{
    // Most options taken from here:
    // https://github.com/algorand/walletconnect-example-dapp/blob/master/tsconfig.json
    "compilerOptions": {
      "baseUrl": ".",
      "module": "ES6",
      "target": "ES6",
      "lib": [ "ES6", "DOM" ],
      "skipLibCheck": true,
      "allowJs": true,
      "moduleResolution": "node",
      "rootDir": "src",
      "strict": true,
      "esModuleInterop": true,
      "noEmitOnError": true,
      "removeComments": true,
      "sourceMap": true,
      "forceConsistentCasingInFileNames": true,

      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "importHelpers": true,
      "strictNullChecks": true,
      "allowSyntheticDefaultImports": true,
      "suppressImplicitAnyIndexErrors": true,
      "noUnusedLocals": false,
      "resolveJsonModule": true
    },
    "include": [
      "src"
    ],
    "compileOnSave": true
}
